<h1>All of your books in one place!</h1>

<% unless current_user.books.empty? %>
  <% current_user.books.each do |book| %>
    <a href="/books/<%=book.id%>/view_book">View Book Details</a><br>
    <a href="/books/<%=book.id%>/edit">Edit Book</a><br>
    <b><%= book.title %></b><br>
    <%= "by " + book.author %>
    <br>
    <br>
    Most recently added: <%= book.characters.first ? book.characters.last.name : "None yet!"%>
    <form action="/books/<%=book.id%>/delete" method = "POST"> <!--delete button-->
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" id="delete" value="Delete Book"><br>
    </form>
    <br>
  <%end%>
<%end%>

<a href= "/new_book">Create a new book</a>
<br>
<br>
<a href= "/new_character">Add character to an existing book</a>
